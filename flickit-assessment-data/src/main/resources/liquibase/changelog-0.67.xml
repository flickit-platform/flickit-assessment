<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                                       http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.17.xsd">

    <changeSet id = "0.67-01" author="Maziyar Gerami">
        <addColumn tableName="faa_advice_narration">
            <column name="approved" type="boolean" defaultValue="true">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>

    <changeSet id="0.67-02" author="Khorsandi">
        <addColumn tableName="faa_advice_narration">
            <column name="last_modification_time" type="${datetime_with_time_zone_type}"
                    valueComputed="GREATEST(ai_narration_time, COALESCE(assessor_narration_time, ai_narration_time))">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>

    <changeSet id="0.67-03" author="Maziyar Gerami">
        <addColumn tableName="fau_user">
            <column name="creation_time" type="${datetime_with_time_zone_type}"/>
            <column name="last_modification_time" type="${datetime_with_time_zone_type}"/>
        </addColumn>
    </changeSet>
    <changeSet id="0.67-04" author="Maziyar Gerami">
        <addColumn tableName="fac_assessment_user_role">
            <column name="created_by" type="UUID"/>
            <column name="creation_time" type="${datetime_with_time_zone_type}"/>
        </addColumn>
    </changeSet>

    <changeSet id="0.67-05" author="Maziyar Gerami">
        <update tableName="fac_assessment_user_role">
            <column name="created_by"
                    valueComputed="(SELECT a.created_by FROM fac_assessment a WHERE a.id = assessment_id)"/>
            <column name="creation_time"
                    valueComputed="(SELECT a.creation_time FROM fac_assessment a WHERE a.id = assessment_id)"/>
        </update>
    </changeSet>

    <changeSet id="0.67-06" author="Maziyar Gerami">
        <addNotNullConstraint tableName="fac_assessment_user_role"
                              columnName="created_by"/>
        <addNotNullConstraint tableName="fac_assessment_user_role"
                              columnName="creation_time"/>
    </changeSet>

</databaseChangeLog>
