<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                                       http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.17.xsd">

    <changeSet id = "0.67-01" author="Maziyar Gerami">
        <addColumn tableName="faa_advice_narration">
            <column name="approved" type="boolean" defaultValue="true">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>

    <changeSet id="0.67-02" author="Maziyar Gerami">
        <dropColumn tableName="fau_user" columnName="last_login"/>
        <dropColumn tableName="fau_user" columnName="is_superuser"/>
        <dropColumn tableName="fau_user" columnName="is_staff"/>
        <dropColumn tableName="fau_user" columnName="is_active"/>
    </changeSet>

    <changeSet id="0.67-03" author="Maziyar Gerami">
        <addColumn tableName="fau_user">
            <column name="creation_time" type="${datetime_with_time_zone_type}"/>
            <column name="last_modification_time" type="${datetime_with_time_zone_type}"/>
        </addColumn>
    </changeSet>
</databaseChangeLog>
