<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                                       http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.17.xsd">

    <changeSet id="0.68-01" author="Maziyar Gerami">
        <addColumn tableName="fac_assessment_user_role">
            <column name="created_by" type="UUID"
                    valueComputed="(SELECT a.created_by FROM fac_assessment a WHERE a.id = assessment_id)">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>

    <changeSet id="0.68-02" author="Maziyar Gerami">
        <addColumn tableName="fac_assessment_user_role">
            <column name="creation_time" type="${datetime_with_time_zone_type}"
                    valueComputed="(SELECT a.creation_time FROM fac_assessment a WHERE a.id = assessment_id)">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>

</databaseChangeLog>
