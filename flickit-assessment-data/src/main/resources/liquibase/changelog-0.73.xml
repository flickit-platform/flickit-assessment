<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                                       http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.17.xsd">

    <changeSet id="0.73-01" author="Maziyar Gerami">
        <addColumn tableName="fac_answer">
            <column name="deleted" type="boolean" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>

    <changeSet id="0.73-02" author="Maziyar Gerami">
        <addColumn tableName="fac_answer_history">
            <column name="answer_option_index" type="int"/>
        </addColumn>
    </changeSet>

    <changeSet id="0.73-03" author="Maziyar Gerami">
        <sql>
            UPDATE fac_answer_history fah
            SET answer_option_index = ao.index
            FROM fak_answer_option ao, fac_assessment_result ar
            WHERE ar.id = fah.assessment_result_id
            AND fah.answer_option_id = ao.id
            AND ao.kit_version_id = ar.kit_version_id
            AND fah.answer_option_id IS NOT NULL;
        </sql>
    </changeSet>

    <changeSet id="0.73-04" author="Maziyar Gerami">
        <insert tableName="fau_user" schemaName="public">
            <column name="password" valueComputed="gen_random_uuid()"/>
            <column name="is_superuser" valueBoolean="false"/>
            <column name="is_staff" valueBoolean="false"/>
            <column name="is_active" valueBoolean="true"/>
            <column name="email" value="system@flickit.org"/>
            <column name="display_name" value="System User"/>
            <column name="id" valueComputed="gen_random_uuid()"/>
            <column name="creation_time" valueComputed="NOW()"/>
            <column name="last_modification_time" valueComputed="NOW()"/>
        </insert>
    </changeSet>
</databaseChangeLog>
